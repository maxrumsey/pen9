<html>
  <head>
    <title>Login | Pen9</title>
    <link rel="stylesheet" type="text/css" href="pen9.css">
    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
  </head>
  <body id='gradientBackground'>
    <form action="/create" method="post" id='pageBox'>
      <h1>Pen9</h1>
      <h2>Create Account</h2>
      <% if (typeof fail != 'undefined') { %>
        <p>Account Creation Failed</p>
      <% } %>
      Username
      <input type='text' name='username'/>
      Password
      <input type='password' name='password'/>
      <input type='submit'></input>
    </form>
    <div class='bottomLeftBox' id='return'>
      <p><a href='/'>Return</a></p>
    </div>
  </body>
</html>
